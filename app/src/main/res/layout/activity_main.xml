<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/whose_turn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:id="@+id/turnBanner"
        />

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:columnCount="3"
            android:gravity="center"
            android:rowCount="3"
            tools:context=".MainActivity"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/turnBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        >

            <Button
                android:id="@+id/btn1"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn2"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn3"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn4"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn5"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn6"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn7"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn8"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />

            <Button
                android:id="@+id/btn9"
                android:layout_margin="10dp"
                android:onClick="whenClicked" />
        </GridLayout>

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_winner_yet"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/winner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveGame"
            android:text="@string/save"
            app:layout_constraintTop_toBottomOf="@+id/reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Button
            android:id="@+id/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadGame"
            android:text="@string/load"
            app:layout_constraintTop_toBottomOf="@+id/save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_menu"
        />



</androidx.drawerlayout.widget.DrawerLayout>

